# Backend
APP_ENV=dev
JWT_SECRET=change-me
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/visitors
REDIS_URL=redis://cache:6379/0
CORS_ORIGINS=http://localhost:3000

# Single camera (optional default RTSP)
DEFAULT_CAMERA_NAME=Kamera Utama
DEFAULT_CAMERA_RTSP=rtsp://user:pass@ip:554/stream

# Edge
EDGE_MODE=real           # fake | real
EDGE_CAMERA_ID=1
EDGE_POST_INTERVAL_SECONDS=3
EDGE_CONFIG_REFRESH_SECONDS=30

EDGE_RTSP_URL=/dev/video0

# YOLOv5 settings
YOLOV5_CONF=0.35
YOLOV5_IOU=0.45
YOLOV5_IMG_SIZE=640
YOLOV5_DEVICE=cuda:0        # cpu | cuda:0
YOLOV5_REPO=
YOLOV5_WEIGHTS=


# Tracker
TRACK_MAX_DISAPPEARED=20
TRACK_MAX_DISTANCE=80

# Backend ingest
BACKEND_INGEST_URL=http://backend:8000/api/events/ingest
EDGE_AUTH_USERNAME=admin
EDGE_AUTH_PASSWORD=admin123

# Frontend
NEXT_PUBLIC_API_BASE=http://localhost:8000
